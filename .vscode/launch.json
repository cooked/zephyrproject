    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./bin/executable.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "jlink"
        },

        // jlink 
        {
            "name": "Bootloader",
            "cwd": "${workspaceRoot}",
            "executable": "./boot/build/zephyr/boot.elf",
            "request": "launch",
            "type": "cortex-debug",
            //"serverpath": "C:/Program Files (x86)/SEGGER/JLink/JLinkGDBServerCL.exe",
            "servertype": "jlink",
            "device": "STM32F446RE",
            "interface": "swd",
            "runToEntryPoint": "main",
            "svdFile": "./STM32F412.svd"
        },
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "build/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "jlink"
        },
        
        // board_runner_args(jlink "--device=STM32L475VG" "--speed=4000")


        // openocd
        {
            "name": "zephyr stm32f103rb",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            //"runToEntryPoint": "main",
            "cwd": "${workspaceRoot}",
            "executable": "build/zephyr/zephyr.elf",
            "device": "stm32f103rb",
            //"interface": "swd",
            //"armToolchainPath": "${HOME}/zephyr-sdk-0.14.2/arm-zephyr-eabi/bin",
		    //"armToolchainPath": "${env:GNUARMEMB_TOOLCHAIN_PATH}/bin",
            "configFiles": [
                 "zephyr/boards/arm/nucleo_f103rb/support/openocd.cfg"
                    ]
        },
        {
            "name": "zephyr STM32F446ZE",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "runToEntryPoint": "main",
            "cwd": "${workspaceRoot}",
            "executable": "build/zephyr/zephyr.elf",
            "device": "stm32f446ze",
            "interface": "swd",
            //"armToolchainPath": "${HOME}/zephyr-sdk-0.14.2/arm-zephyr-eabi/bin",
		    //"armToolchainPath": "${env:GNUARMEMB_TOOLCHAIN_PATH}/bin",
            "configFiles": [
                 "zephyr/boards/arm/nucleo_f446ze/support/openocd.cfg"
                    ]
        }
    ]
}