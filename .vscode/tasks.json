{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build custom nRF91 application",
			"detail": "Builds our custom nRF91 application",
			"type": "shell",
			"group": "build",
			"command": "/app/build_util_scripts/compile_custom_nrf91_application.sh",
			"promptOnClose": false,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"options": {
				"cwd": "/app/build_util_scripts"
			}
		},
		{
			"label": "Build stm32f103rb",
			"type": "shell",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "west",
			"args": [
				"build",
				"-p", "auto",
				//"-b", "nucleo_f103rb",
				"-b", "nucleo_f446ze",
				"application-10dof"
				//"zephyr/samples/basic/blinky"
			],
			"promptOnClose": false,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}